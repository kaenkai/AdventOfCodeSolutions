    except FileNotFoundError as err:
        print(err)
        print('Using test data.')
        eqns = TestEqns
    eqns = [[int(n) for n in re.findall(r'[0-9]+', e)] for e in eqns.split('\n')]
    calibration = 0
    for eqn in eqns:
        calibration += eqn[0] if verifyEq(eqn) else 0
    print(f'\nResult: {calibration:_d}')


