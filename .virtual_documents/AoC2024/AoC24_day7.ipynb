'''[1:-1]


def verifyEq(eqn: str) -> bool:
    """ Verifies equation
    Args:
        eqn (str): equation
    Return:
        (bool): is a valid equation or not
    """
    r, *n = eqn
    opCount = len(n)-1
    for i in range(int('1'*opCount, 2)+1):
        # Count operators = count numbers - 1; 0 --> +, 1 --> *
        op = f'{i:0{opCount}b}'
        result = n[0]
        for ii in range(len(op)):
            if op[ii] == '0':
                result += n[ii+1]
            elif op[ii] == '1':
                result *= n[ii+1]
        if result == r:
            return True
    return False


